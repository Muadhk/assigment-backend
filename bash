/backend
    /controllers       // Handle business logic for routes
        /userController.js
        /adminController.js
    /models            // MongoDB models for User and Assignment
        /user.js
        /assignment.js
    /routes            // API route definitions
        /userRoutes.js
        /adminRoutes.js
    /middleware        // Middleware for authentication and roles
        /authMiddleware.js
    /config            // Environment configuration (e.g., DB, OAuth)
        /db.js
    app.js             // Main entry point
    package.json       // Project dependencies
    README.md          // Setup and documentation
